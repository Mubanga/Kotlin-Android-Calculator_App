<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="388dp"
            android:layout_height="162dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/edt_TextScreen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Cancel"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edt_TextScreen"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="DIVISION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Division"
            app:layout_constraintStart_toEndOf="@+id/btn_Cancel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_Cancel"/>
    <Button
            android:text="MULTIPLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Multiplication"
            app:layout_constraintStart_toEndOf="@+id/btn_Operation_Division"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_Cancel"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Cancel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_8" app:layout_constraintStart_toEndOf="@+id/btn_Num_7"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Cancel"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Cancel" app:layout_constraintStart_toEndOf="@+id/btn_Num_8"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_4"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_Num_7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_8" app:layout_constraintStart_toEndOf="@+id/btn_Num_4"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_9" app:layout_constraintStart_toEndOf="@+id/btn_Num_5"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="DELETE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Delete" app:layout_constraintStart_toEndOf="@+id/btn_Operation_Multiplication"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_Cancel"/>
    <Button
            android:text="MINUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Minus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Cancel" app:layout_constraintStart_toEndOf="@+id/btn_Num_9"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Add" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Minus"
            app:layout_constraintStart_toEndOf="@+id/btn_Num_6"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_5" app:layout_constraintStart_toEndOf="@+id/btn_Num_1"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_6" app:layout_constraintStart_toEndOf="@+id/btn_Num_2"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="BRACKETS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Brackets" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Add"
            app:layout_constraintStart_toEndOf="@+id/btn_Num_3"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Dot" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_2" app:layout_constraintStart_toEndOf="@+id/btn_Num_0"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="+/-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Plus_Minus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_3" app:layout_constraintStart_toEndOf="@+id/btn_Dot"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="EQUALS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Equals" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Brackets"
            app:layout_constraintStart_toEndOf="@+id/btn_Plus_Minus"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>