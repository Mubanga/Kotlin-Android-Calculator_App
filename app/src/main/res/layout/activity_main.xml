<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Cancel"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/edtText_Calculation_Screen"
            android:minWidth="80dip" android:textSize="18sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/edtText_Calculation_Screen"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Division"
            app:layout_constraintStart_toEndOf="@+id/btn_Operation_Cancel"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/btn_Operation_Cancel" android:minWidth="80dip"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_Num_8"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Multiplication"
            app:layout_constraintStart_toEndOf="@+id/btn_Operation_Division"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/btn_Operation_Cancel" android:minWidth="80dip"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_Num_9"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Cancel"
            android:minWidth="80dip" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/btn_Operation_Cancel"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_8" app:layout_constraintStart_toEndOf="@+id/btn_Num_7"
            android:layout_marginStart="12dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Cancel" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Cancel" app:layout_constraintStart_toEndOf="@+id/btn_Num_8"
            android:layout_marginStart="4dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_4"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_7"
            android:minWidth="80dip"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/btn_Num_7"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_5"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_8" app:layout_constraintStart_toEndOf="@+id/btn_Num_4"
            android:layout_marginStart="12dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_6"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_9" app:layout_constraintStart_toEndOf="@+id/btn_Num_5"
            android:layout_marginStart="4dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="DEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Delete" app:layout_constraintStart_toEndOf="@+id/btn_Operation_Multiplication"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_Operation_Cancel" android:minWidth="80dip" android:textSize="18sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_Operation_Minus"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Minus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Cancel" app:layout_constraintStart_toEndOf="@+id/btn_Num_9"
            android:layout_marginStart="8dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Add"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Minus"
            app:layout_constraintStart_toEndOf="@+id/btn_Num_6"
            android:layout_marginStart="8dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_4"
            android:minWidth="80dip" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/btn_Num_4"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_5" app:layout_constraintStart_toEndOf="@+id/btn_Num_1"
            android:layout_marginStart="12dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_6" app:layout_constraintStart_toEndOf="@+id/btn_Num_2"
            android:layout_marginStart="4dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="()"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Brackets" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Add"
            app:layout_constraintStart_toEndOf="@+id/btn_Num_3"
            android:layout_marginStart="8dp" android:minWidth="80dip" android:textSize="18sp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Num_0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_1"
            android:minWidth="80dip" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/btn_Num_1"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Special_Dot" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_2" app:layout_constraintStart_toEndOf="@+id/btn_Num_0"
            android:layout_marginStart="12dp" android:minWidth="80dip" android:textSize="18sp"
    />
    <Button
            android:text="+/-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Special_Plus_Minus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Num_3" app:layout_constraintStart_toEndOf="@+id/btn_Special_Dot"
            android:layout_marginStart="4dp" android:minWidth="80dip" android:textSize="18sp"
    />
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Operation_Equals" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Operation_Brackets"
            app:layout_constraintStart_toEndOf="@+id/btn_Special_Plus_Minus"
            android:layout_marginStart="8dp" android:minWidth="80dip" android:textSize="18sp"
    />
    <EditText
            android:layout_width="374dp"
            android:layout_height="122dp"
            android:inputType="textMultiLine|numberDecimal|numberSigned"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/edtText_Calculation_Screen"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:longClickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
</android.support.constraint.ConstraintLayout>